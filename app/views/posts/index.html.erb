<div class="body">
	<div class="posts">
	  <div class="container">
	  	<% @posts.each do |post| %> 
				<div class="post"> 
	  			<p class="content"><%= post.content %></p> 
	  			<p class="time"><%= post.created_at %></p> 
				</div> 
			<% end %>
			<%= link_to 'New Post', "posts/new" %>
	  </div>
	</div>
</div>